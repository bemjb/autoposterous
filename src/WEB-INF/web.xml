<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app 
   xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 
  <display-name>Autopost from Posterous to unsupported sites</display-name>
  
  <servlet>
    <servlet-name>autopost</servlet-name>
    <servlet-class>com.pyen.posterous.autopost.AutopostServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>autopost</servlet-name>
    <url-pattern>/autopost</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
